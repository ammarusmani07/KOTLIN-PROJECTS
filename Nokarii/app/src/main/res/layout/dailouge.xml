<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/app">

            <TextView
                android:id="@+id/newjob_textView_register_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="New Job"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/white" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/newjob_imageView_profile_dp"
                android:layout_width="163dp"
                android:layout_height="98dp"

                android:layout_below="@id/newjob_textView_register_head"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="115dp"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-40dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/border"
            android:padding="15dp">


            <RelativeLayout
                android:id="@+id/RL_salary_expectation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:background="@drawable/border">

                <!-- Adjust ImageView and TextView as needed -->
                <ImageView
                    android:id="@+id/imageViewSalary"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_money" />


                <AutoCompleteTextView
                    android:id="@+id/newjob_autoCompleteTextViewSalary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@id/imageViewSalary"
                    android:background="@android:color/transparent"
                    android:hint="enter your salary expectation"
                    android:inputType="number"
                    android:padding="6dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RL_profession"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/RL_salary_expectation"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                >

                <!-- Adjust ImageView and TextView as needed -->
                <ImageView
                    android:id="@+id/imageViewProfession"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/baseline_work_24" />


                <AutoCompleteTextView
                    android:id="@+id/newjob_autoCompleteTextViewProfession"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@id/imageViewProfession"
                    android:background="@android:color/transparent"
                    android:hint="Your Profession/Your Need"
                    android:padding="6dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"

                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RL_experience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/RL_profession"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                >

                <!-- Adjust ImageView and TextView as needed -->
                <ImageView
                    android:id="@+id/imageView_experience"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/baseline_shopping_bag_24" />


                <AutoCompleteTextView
                    android:id="@+id/newjob_autoCompleteTextView_experience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@id/imageView_experience"
                    android:background="@android:color/transparent"
                    android:hint="Experience/Need of experience"
                    android:padding="6dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"

                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RL_qualification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/RL_experience"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                >

                <!-- Adjust ImageView and TextView as needed -->
                <ImageView
                    android:id="@+id/imageView_qual"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/baseline_pan_tool_24" />


                <AutoCompleteTextView
                    android:id="@+id/newjob_autoCompleteTextViewe_qual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@id/imageView_qual"
                    android:background="@android:color/transparent"
                    android:hint="qualification/Need of qualification"
                    android:padding="6dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"

                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RL_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/RL_qualification"
                android:layout_marginTop="10dp"
                android:background="@drawable/border">

                <ImageView
                    android:id="@+id/imageViewGender"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_gender" />


                <RadioGroup
                    android:id="@+id/newjob_radio_group_register_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_toEndOf="@id/imageViewGender"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/white"
                        android:text="Female"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/radio_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:buttonTint="@color/white"
                        android:text="Male"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </RadioGroup>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/RL_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/RL_gender"
                android:layout_marginTop="10dp"
                android:background="@drawable/border">

                <ImageView
                    android:id="@+id/imageViewMobile"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_phone" />


                <AutoCompleteTextView
                    android:id="@+id/newjob_autoCompleteTextViewMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@id/imageViewMobile"
                    android:background="@android:color/transparent"
                    android:hint="Whatsapp no. (without +92)"
                    android:inputType="phone"
                    android:padding="6dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textCursorDrawable="@drawable/edittextcursor"
                    android:textSize="16sp" />
            </RelativeLayout>


        </RelativeLayout>




        <ProgressBar
            android:id="@+id/newjob_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="10dp"
            android:visibility="gone" />



            </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>